<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@android:color/transparent"
    card_view:cardBackgroundColor="@color/background_card_color"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/olx_ads_thumbnail"
            android:layout_width="@dimen/ad_round_size"
            android:layout_height="@dimen/ad_round_size"
            android:layout_marginRight="@dimen/base_spacing_micro"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/base_spacing_micro"
            android:padding="@dimen/base_spacing_small">

            <TextView
                android:id="@+id/olx_ads_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="Nome do Produto" />

            <TextView
                android:id="@+id/olx_ads_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="R$ 500.00" />

            <TextView
                android:id="@+id/olx_ads_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="20/11/2015" />

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>