<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@android:color/transparent"
    card_view:cardBackgroundColor="@color/background_card_color"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <ImageView
            android:id="@+id/olx_ads_thumbnail"
            android:layout_width="@dimen/ad_thumbnail_size"
            android:layout_height="@dimen/ad_thumbnail_size"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/olx_ads_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/TextCommon.Title"
            android:gravity="center_horizontal"
            tools:text="Nome do Produto" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/base_spacing_small"
            >

            <TextView
                android:id="@+id/olx_ads_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextCommon.Price"
                android:gravity="center_vertical"
                tools:text="R$ 500.00" />

            <TextView
                android:id="@+id/olx_ads_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextCommon.Ad.Date"
                tools:text="20/11/2015" />

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>